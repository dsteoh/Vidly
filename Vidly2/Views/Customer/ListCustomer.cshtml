@model Vidly2.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "ListCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped table-hover">
<thead>
<tr>
    <th>Customer Name</th>
</tr>
</thead>
@if (Model.Customers.Count == 0)
{
    <tbody>
    <tr class="active">
        <td>There is no customers</td>
    </tr>
    </tbody>
}
else
{
    foreach(var cus in Model.Customers)
    {
        <tbody>
        <tr class="active">
            <td>
                @Html.ActionLink(cus.Name, "DetailCustomer", "Customer", new {id= cus.Id}, null)
            </td>
        </tr>
        </tbody>
    }
}
</table>