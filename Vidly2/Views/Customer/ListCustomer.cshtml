@model IEnumerable<Vidly2.Models.Customer>
@{
    ViewBag.Title = "ListCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped table-hover">
<thead>
<tr>
    <th>Customer Name</th>
</tr>
</thead>
@if (!Model.Any())
{
    <tbody>
    <tr class="active">
        <td>There is no customers</td>
    </tr>
    </tbody>
}
else
{
    foreach(var cus in Model)
    {
        <tbody>
        <tr class="active">
            <td>
                @Html.ActionLink(cus.Name, "DetailCustomer", "Customer", new {id= cus.Id}, null)
            </td>
        </tr>
        </tbody>
    }
}
</table>