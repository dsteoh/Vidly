@using System.Activities.Expressions
@using Vidly2.Controllers
@model IEnumerable<Vidly2.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.ActionLink("New Movie", "New", "Movie", new {@class="btn btn-primary"})
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Movie Title</th>
        <th>Genre</th>
        <th></th>
    </tr>
    </thead>
    @if (!Model.Any())
    {
        <tbody>
        <tr class="active">
            <td>There are no movies</td>
        </tr>
        </tbody>
    }
    else
    {
        foreach (var movies in Model)
        {
            <tbody>
            <tr class="active">
                <td>@Html.ActionLink(movies.Name, "Edit", "Movie", new {id= movies.Id}, null)</td>
                <td>@movies.Genre.Name</td>
                <td>@Html.ActionLink("Delete", "Delete", "Movie", new {id = movies.Id}, null)</td>
            </tr>
            </tbody>
        }
    }
</table>

